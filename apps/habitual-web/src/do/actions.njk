    color: #e5e7eb;
  }
</style>

<script type="module">
  import { initializeUser, getUserId } from '/assets/js/auth/auth.js';
  import { listActions, createAction } from '/assets/js/api/actions.js';
  import { listProjects } from '/assets/js/api/projects.js';

  initializeUser();
  const userId = getUserId();

  const loadingEl = document.getElementById('loading');
  const pageEl = document.getElementById('actions-page');

  // Store loaded data
  let allActions = [];
  let allProjects = [];
  let selectedProjectId = '';

  function getProjectName(projectId) {
    if (!projectId) return 'No project';
    const project = allProjects.find(p => p.id === projectId);
    return project ? project.name : 'Unknown project';
  }

  function renderActionsList(actions, listId, emptyId, filter = 'all') {
    const listEl = document.getElementById(listId);
    const emptyEl = document.getElementById(emptyId);

    listEl.innerHTML = '';

    // Filter by project first
    let filteredActions = actions;
    if (selectedProjectId) {
      filteredActions = filteredActions.filter(a => a.projectId === selectedProjectId);
    }

    // Then filter by state
    if (filter === 'open') {
      filteredActions = filteredActions.filter(a => !['completed', 'dismissed'].includes(a.state));
    } else if (filter === 'completed') {
      filteredActions = filteredActions.filter(a => a.state === 'completed');
    }

    // Sort by creation date, newest first
    filteredActions.sort((a, b) => {
      const dateA = new Date(a._createdAt || 0);
      const dateB = new Date(b._createdAt || 0);
      return dateB - dateA;
    });

    if (filteredActions.length === 0) {
      emptyEl.style.display = 'block';
      return;
    }

    emptyEl.style.display = 'none';

    filteredActions.forEach(action => {
      const item = document.createElement('a');
      item.className = 'action-item';
      item.href = `/do/action/?id=${action.id}`;

      const badgeClass = `badge-${action.state}`;
      const projectName = getProjectName(action.projectId);

      item.innerHTML = `
        <div class="item-info">
          <h3 class="item-name">${action.title || 'Untitled Action'}</h3>
          <div class="item-meta">${projectName} &bull; ${action.priority || 'medium'} priority</div>
        </div>
        <span class="item-badge ${badgeClass}">${action.state}</span>
      `;

      listEl.appendChild(item);
    });
  }

  function renderOpenActions() {
    renderActionsList(allActions, 'open-list', 'open-empty', 'open');
  }

  function renderCompletedActions(filter = 'completed') {
    renderActionsList(allActions, 'completed-list', 'completed-empty', filter);
  }

  function updateCounts() {
    // Apply project filter to counts
    let actions = allActions;
    if (selectedProjectId) {
      actions = actions.filter(a => a.projectId === selectedProjectId);
    }
    const openActions = actions.filter(a => !['completed', 'dismissed'].includes(a.state));
    const completedActions = actions.filter(a => a.state === 'completed');
    document.getElementById('open-count').textContent = openActions.length;
    document.getElementById('completed-count').textContent = completedActions.length;
  }

  function setupViewNavigation() {
    const viewLinks = document.querySelectorAll('.view-link');
    const views = document.querySelectorAll('.actions-view');

    function switchView(viewName) {
      viewLinks.forEach(link => {
        if (link.dataset.view === viewName) {
          link.classList.add('active');
          link.style.color = '#2563eb';
        } else {
          link.classList.remove('active');
          link.style.color = '#6b7280';
        }
      });

      views.forEach(view => {
        view.style.display = view.id === `view-${viewName}` ? 'block' : 'none';
      });
    }

    viewLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const viewName = link.dataset.view;
        switchView(viewName);
        history.replaceState(null, '', `#${viewName}`);
      });
    });

    // Handle initial hash
    const hash = window.location.hash.slice(1);
    if (['open', 'completed'].includes(hash)) {
      switchView(hash);
    }
  }

  function setupCompletedFilter() {
    const filterEl = document.getElementById('completed-filter');
    filterEl.addEventListener('change', () => {
      renderCompletedActions(filterEl.value);
    });
  }

  function setupProjectFilter() {
    const filterEl = document.getElementById('project-filter');

    // Populate dropdown
    filterEl.innerHTML = '<option value="">All Projects</option>';
    allProjects.forEach(project => {
      const option = document.createElement('option');
      option.value = project.id;
      option.textContent = project.name || 'Untitled Project';
      filterEl.appendChild(option);
    });

    // Handle filter changes
    filterEl.addEventListener('change', () => {
      selectedProjectId = filterEl.value;
      renderOpenActions();
      renderCompletedActions(document.getElementById('completed-filter').value);
      updateCounts();
    });
  }

  function setupAddActionModal() {
    const modal = document.getElementById('add-action-modal');
    const openBtn = document.getElementById('add-action-btn');
    const closeBtn = document.getElementById('close-add-action-modal');
    const cancelBtn = document.getElementById('cancel-add-action');
    const form = document.getElementById('add-action-form');
    const titleInput = document.getElementById('action-title');
    const projectSelect = document.getElementById('action-project');

    function populateProjectDropdown() {
      // Keep the placeholder option
      projectSelect.innerHTML = '<option value="">Select a project...</option>';
      allProjects.forEach(project => {
        const option = document.createElement('option');
        option.value = project.id;
        option.textContent = project.name || 'Untitled Project';
        projectSelect.appendChild(option);
      });
    }

    function openModal() {
      populateProjectDropdown();
      modal.style.display = 'block';
      titleInput.focus();
    }

    function closeModal() {
      modal.style.display = 'none';
      form.reset();
    }

    openBtn.addEventListener('click', openModal);
    closeBtn.addEventListener('click', closeModal);
    cancelBtn.addEventListener('click', closeModal);
    modal.addEventListener('click', (e) => {
      if (e.target === modal) closeModal();
    });

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const submitBtn = document.getElementById('submit-add-action');
      const title = titleInput.value.trim();
      const description = document.getElementById('action-description').value.trim();
      const selectedProjectId = projectSelect.value;
      const dueDate = document.getElementById('action-due-date').value || null;

      if (!title || !selectedProjectId) return;

      submitBtn.disabled = true;
      submitBtn.textContent = 'Adding...';

      try {
        const result = await createAction({
          userId,
          projectId: selectedProjectId,
          title,
          description,
          dueDate,
          priority: 'medium',
          taskType: 'manual'
        });

        if (!result.success) {
          throw new Error(result.error || 'Failed to create action');
        }

        // Add to list and re-render
        allActions.unshift(result.action);
        updateCounts();
        renderOpenActions();

        closeModal();
      } catch (error) {
        console.error('Error creating action:', error);
        alert(`Failed to create action: ${error.message}`);
      } finally {
        submitBtn.disabled = false;
        submitBtn.textContent = 'Add Action';
      }
    });
  }

  async function loadActions() {
    try {
      const [actionsData, projectsData] = await Promise.all([
        listActions(userId),
        listProjects(userId)
      ]);

      loadingEl.style.display = 'none';

      if (!actionsData.success) {
        throw new Error(actionsData.error || 'Failed to load actions');
      }

      allActions = actionsData.actions || [];
      allProjects = projectsData.success ? (projectsData.projects || []) : [];

      pageEl.style.display = 'block';

      setupProjectFilter();
      updateCounts();
      renderOpenActions();
      renderCompletedActions();

      setupViewNavigation();
      setupCompletedFilter();
      setupAddActionModal();

    } catch (error) {
      console.error('Error loading actions:', error);
      loadingEl.innerHTML = `<p style="color: #dc2626;">Error loading actions: ${error.message}</p>`;
    }
  }

  loadActions();
</script>
