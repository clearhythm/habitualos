---
title: HabitualOS Dashboard
layout: base.njk
---

<div id="loading-dashboard" class="mb-xl">
  <p class="text-muted">Loading your dashboard...</p>
</div>

<div id="no-northstar" class="mb-xl" style="display: none;">
  <div class="card">
    <h2 class="mb-md">Welcome to HabitualOS</h2>
    <p class="mb-md">You haven't created a NorthStar goal yet. Let's get started!</p>
    <a href="/setup" class="btn btn-primary">Create Your NorthStar</a>
  </div>
</div>

<div id="dashboard-content" style="display: none;">
  {# NorthStar Section #}
  <div class="mb-xl">
    <div class="flex flex-between mb-md">
      <h2>Your NorthStar</h2>
      <span class="badge badge-open" id="northstar-status">Active</span>
    </div>

    <div class="card" id="northstar-card">
      <h3 class="card-title" id="northstar-title"></h3>
      <p class="mb-md" id="northstar-goal"></p>
      <p class="text-muted"><strong>Timeline:</strong> <span id="northstar-timeline"></span></p>
    </div>
  </div>

  {# Progress Metrics #}
  <div class="mb-lg" id="progress-section">
    <p class="text-muted" id="progress-text"></p>
    <div class="progress">
      <div class="progress-bar" id="progress-bar" style="width: 0%;"></div>
    </div>
  </div>

  {# Action Cards Section #}
  <div class="mb-lg">
    <div class="flex flex-between mb-md">
      <h2>Action Cards</h2>
      <button id="toggle-completed" class="btn btn-secondary" style="display: none;"></button>
    </div>

    <div class="grid gap-md" id="active-actions"></div>

    {# Completed Actions (hidden by default) #}
    <div id="completed-actions" class="grid gap-md mt-md" style="display: none;"></div>
  </div>
</div>
