<div class="container-narrow" style="max-width: 700px; margin: 0 auto; padding: 2rem;">
  <div style="margin-bottom: 2rem;">
    <h1 style="margin-bottom: 0.5rem;">Get Motivated</h1>
    <p style="color: #666; margin: 0;">Obi-Wai can help light up your path.</p>
  </div>

  <!-- Chat Container -->
  <div id="chat-container" style="display: block;">
    <div class="chat-messages" id="chat-messages" style="flex: 1; overflow-y: auto; padding: 1.5rem; display: flex; flex-direction: column; gap: 1rem; background-color: #f9f9f9; border-radius: 8px; margin-bottom: 1.5rem; max-height: 500px; min-height: 300px;"></div>

    <div id="chat-loading" style="display: none; padding: 1rem; text-align: center;">
      <p style="color: #9b59b6; margin: 0; font-style: italic;">Obi-Wai is thinking...</p>
    </div>

    <form id="chat-form" style="display: flex; gap: 0.75rem; align-items: flex-end;">
      <textarea
        name="message"
        id="message-input"
        placeholder="Reply..."
        required
        rows="3"
        style="flex: 1; padding: 0.75rem; border: 1px solid #ddd; border-radius: 4px; font-size: 1rem; font-family: inherit; resize: vertical;"
      ></textarea>
      <button
        type="submit"
        style="padding: 0.75rem 1.5rem; background: #9b59b6; color: white; border: none; border-radius: 4px; font-size: 1rem; font-weight: 600; cursor: pointer; transition: background 0.2s; height: fit-content;"
        onmouseover="this.style.background='#8b4a96'"
        onmouseout="this.style.background='#9b59b6'"
      >
        Send
      </button>
    </form>

    <!-- Chat Actions -->
    <hr style="border: none; border-top: 1px solid #ddd; margin: 1.5rem 0;">
    <div style="display: flex; justify-content: center; gap: 1.5rem;">
      <button
        id="save-chat-btn"
        type="button"
        style="background: none; border: none; color: #9b59b6; font-size: 0.85rem; cursor: pointer; padding: 0.25rem 0.5rem; transition: color 0.2s; display: flex; align-items: center; gap: 0.35rem;"
        onmouseover="this.style.color='#8b4a96'"
        onmouseout="this.style.color='#9b59b6'"
        title="Save conversation"
      >
        Save <span style="font-size: 1.1rem;">➜</span>
      </button>
      <button
        id="reset-chat-btn"
        type="button"
        style="background: none; border: none; color: #999; font-size: 0.85rem; cursor: pointer; padding: 0.25rem 0.5rem; transition: color 0.2s; display: flex; align-items: center; gap: 0.35rem;"
        onmouseover="this.style.color='#666'"
        onmouseout="this.style.color='#999'"
        title="Start over"
      >
        Reset <span style="font-size: 1.1rem;">↻</span>
      </button>
    </div>

    <!-- "I'm Ready" Modal Overlay (appears after READY_TO_PRACTICE signal) -->
    <div id="ready-button-container" style="display: none; position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0, 0, 0, 0.5); z-index: 1000; align-items: center; justify-content: center;">
      <div style="background: white; padding: 3rem 2rem; border-radius: 12px; text-align: center; max-width: 400px; margin: 0 1rem; box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);">
        <button
          id="ready-button"
          style="padding: 1rem 2rem; background: #9b59b6; color: white; border: none; border-radius: 24px; font-size: 1rem; font-weight: 600; cursor: pointer; transition: all 0.2s; box-shadow: 0 2px 8px rgba(155, 89, 182, 0.3);"
          onmouseover="this.style.background='#8b4a96'; this.style.boxShadow='0 4px 12px rgba(155, 89, 182, 0.4)'"
          onmouseout="this.style.background='#9b59b6'; this.style.boxShadow='0 2px 8px rgba(155, 89, 182, 0.3)'"
        >
          I'm Ready to Practice
        </button>
        <button
          id="dismiss-ready-button"
          style="display: block; margin: 1.5rem auto 0; padding: 0.5rem 1rem; background: transparent; color: #999; border: none; font-size: 0.9rem; cursor: pointer; text-decoration: underline;"
          onmouseover="this.style.color='#666'"
          onmouseout="this.style.color='#999'"
        >
          Not yet, keep talking
        </button>
      </div>
    </div>
  </div>

  <!-- "Do Your Practice" Overlay -->
  <div id="do-practice-overlay" style="display: none; text-align: center; padding: 4rem 2rem;">
    <h2 style="font-size: 2rem; margin-bottom: 1rem; color: #333;">Do Your Practice</h2>
    <p style="font-size: 1.1rem; color: #666; margin-bottom: 2rem; max-width: 400px; margin-left: auto; margin-right: auto;">
      Return here when you've completed it to track that you did it. You got this.
    </p>
    <button
      id="i-practiced-button"
      style="padding: 1rem 2rem; background: #0066cc; color: white; border: none; border-radius: 4px; font-size: 1rem; font-weight: 600; cursor: pointer; transition: background 0.2s;"
      onmouseover="this.style.background='#0052a3'"
      onmouseout="this.style.background='#0066cc'"
    >
      I Practiced
    </button>
  </div>
</div>

<script type="module">
  import { saveChatHistory, getChatHistory, clearChatHistory, savePracticeChatState, getPracticeChatState, clearPracticeChatState } from '/assets/js/practice-chat-state.js';

  const chatMessages = document.getElementById('chat-messages');
  const chatForm = document.getElementById('chat-form');
  const messageInput = document.getElementById('message-input');
  const chatLoading = document.getElementById('chat-loading');
  const readyButtonContainer = document.getElementById('ready-button-container');
  const readyButton = document.getElementById('ready-button');
  const dismissReadyButton = document.getElementById('dismiss-ready-button');
  const chatContainer = document.getElementById('chat-container');
  const doPracticeOverlay = document.getElementById('do-practice-overlay');
  const iPracticedButton = document.getElementById('i-practiced-button');

  // Track practice data when ready
  let currentPracticeData = null;

  // Load chat history from localStorage
  let chatHistory = getChatHistory();

  // Render a message bubble
  function renderMessage(role, content) {
    const messageDiv = document.createElement('div');
    messageDiv.style.cssText = 'padding: 0.875rem 1rem 1rem 1rem; border-radius: 8px; max-width: 80%; word-wrap: break-word; line-height: 1.5;';

    if (role === 'assistant') {
      // Obi-Wai message - purple theme, left-aligned
      messageDiv.style.cssText += 'background-color: #f9f6ff; color: #333; align-self: flex-start; border-left: 3px solid #9b59b6; border-bottom-left-radius: 4px;';

      // Render markdown for assistant messages
      if (window.marked) {
        messageDiv.innerHTML = marked.parse(content);
      } else {
        messageDiv.textContent = content;
      }
    } else {
      // User message - blue theme, right-aligned
      messageDiv.style.cssText += 'background-color: #0066cc; color: white; align-self: flex-end; border-bottom-right-radius: 4px;';
      messageDiv.textContent = content;
    }

    chatMessages.appendChild(messageDiv);
    chatMessages.scrollTop = chatMessages.scrollHeight;
  }

  // Initialize chat with opening message or load history
  if (chatHistory.length === 0) {
    const openingMessage = {
      role: 'assistant',
      content: "What would you like to practice today?",
      timestamp: new Date().toISOString()
    };
    chatHistory.push(openingMessage);
    saveChatHistory(chatHistory);
  }

  // Render all messages from history
  chatHistory.forEach(msg => {
    renderMessage(msg.role, msg.content);
  });

  // Handle form submission
  chatForm.addEventListener('submit', async (e) => {
    e.preventDefault();

    const message = messageInput.value.trim();
    if (!message) return;

    // Add user message to UI and history
    const userMessage = {
      role: 'user',
      content: message,
      timestamp: new Date().toISOString()
    };
    renderMessage('user', message);
    chatHistory.push(userMessage);
    saveChatHistory(chatHistory);

    // Clear input
    messageInput.value = '';
    messageInput.style.height = 'auto';

    // Show loading
    chatLoading.style.display = 'block';
    chatForm.querySelector('button[type="submit"]').disabled = true;

    try {
      // Call backend
      const response = await fetch('/.netlify/functions/practice-chat', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          userId: 'u-mgpqwa49', // Hardcoded for now
          message,
          chatHistory: chatHistory.map(msg => ({
            role: msg.role,
            content: msg.content
          }))
        })
      });

      const data = await response.json();

      if (!data.success) {
        throw new Error(data.error || 'Failed to get response');
      }

      // Hide loading
      chatLoading.style.display = 'none';
      chatForm.querySelector('button[type="submit"]').disabled = false;

      // Add assistant response to UI and history
      const assistantMessage = {
        role: 'assistant',
        content: data.response,
        timestamp: new Date().toISOString()
      };
      renderMessage('assistant', data.response);
      chatHistory.push(assistantMessage);
      saveChatHistory(chatHistory);

      // Check if ready to practice
      if (data.ready) {
        currentPracticeData = {
          practiceName: data.practiceName,
          fullSuggestion: data.response
        };

        // Show "I'm Ready" modal
        readyButtonContainer.style.display = 'flex';

        // Disable chat form
        chatForm.querySelector('button[type="submit"]').disabled = true;
        messageInput.disabled = true;
      }

    } catch (error) {
      console.error('Error sending message:', error);
      chatLoading.style.display = 'none';
      chatForm.querySelector('button[type="submit"]').disabled = false;

      // Show error message
      const errorMessage = {
        role: 'assistant',
        content: "I'm having trouble connecting right now. Could you try again?",
        timestamp: new Date().toISOString()
      };
      renderMessage('assistant', errorMessage.content);
      chatHistory.push(errorMessage);
      saveChatHistory(chatHistory);
    }
  });

  // Handle "I'm Ready" button
  readyButton.addEventListener('click', () => {
    if (!currentPracticeData) return;

    // Save practice suggestion to localStorage
    savePracticeChatState({
      suggestedPractice: currentPracticeData.practiceName,
      fullSuggestion: currentPracticeData.fullSuggestion,
      timestamp: new Date().toISOString()
    });

    // Show "Do Your Practice" screen
    chatContainer.style.display = 'none';
    doPracticeOverlay.style.display = 'block';
  });

  // Handle dismiss "I'm Ready" button
  dismissReadyButton.addEventListener('click', () => {
    // Hide ready button, re-enable chat
    readyButtonContainer.style.display = 'none';
    chatForm.querySelector('button[type="submit"]').disabled = false;
    messageInput.disabled = false;
    messageInput.focus();
  });

  // Handle "I Practiced" button
  iPracticedButton.addEventListener('click', () => {
    // Navigate to practice form
    window.location.href = '/practice/';
  });

  // Handle Enter key to submit, Shift+Enter for new line
  messageInput.addEventListener('keydown', function(e) {
    if (e.key === 'Enter' && !e.shiftKey) {
      e.preventDefault();
      chatForm.requestSubmit();
    }
  });

  // Auto-resize textarea
  messageInput.addEventListener('input', function() {
    this.style.height = 'auto';
    this.style.height = (this.scrollHeight) + 'px';
  });

  // Handle save chat button
  document.getElementById('save-chat-btn').addEventListener('click', async () => {
    if (chatHistory.length === 0) {
      alert('No conversation to save.');
      return;
    }

    try {
      // Show loading state
      const saveBtn = document.getElementById('save-chat-btn');
      const originalText = saveBtn.innerHTML;
      saveBtn.innerHTML = 'Saving... <span style="font-size: 1.1rem;">⏳</span>';
      saveBtn.disabled = true;

      // Get current practice chat state (if any)
      const chatState = getPracticeChatState();

      // Save practice chat to backend
      const response = await fetch('/.netlify/functions/practice-chat-save', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          userId: 'u-mgpqwa49', // Hardcoded for now
          messages: chatHistory,
          suggestedPractice: chatState?.suggestedPractice || null,
          fullSuggestion: chatState?.fullSuggestion || null,
          completed: chatState?.suggestedPractice ? true : false
        })
      });

      const data = await response.json();

      if (!data.success) {
        throw new Error(data.error || 'Failed to save practice chat');
      }

      // Restore button and show success
      saveBtn.innerHTML = originalText;
      saveBtn.disabled = false;
      alert('Conversation saved!');

    } catch (error) {
      console.error('Error saving practice chat:', error);
      alert('Failed to save. Please try again.');

      // Restore button state
      const saveBtn = document.getElementById('save-chat-btn');
      saveBtn.innerHTML = originalText;
      saveBtn.disabled = false;
    }
  });

  // Handle reset chat button
  document.getElementById('reset-chat-btn').addEventListener('click', () => {
    if (confirm('Start a fresh conversation? This will clear your current chat.')) {
      clearChatHistory();
      window.location.reload();
    }
  });

  // Focus message input on load
  messageInput.focus();
</script>
