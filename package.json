{
  "name": "habitualos",
  "version": "0.1.0",
  "description": "A personal agentic AI orchestration platform for accomplishing almost anything",
  "main": "index.js",
  "scripts": {
    "sass:build": "sass src/styles/main.scss:_site/css/main.css --style=compressed",
    "sass:watch": "sass src/styles/main.scss:_site/css/main.css --watch",
    "eleventy:build": "eleventy",
    "eleventy:serve": "eleventy --serve",
    "db:init": "node db/init.js",
    "scheduler": "node scheduler/index.js",
    "task:healify": "node data/tasks/healify-shift-cards/scripts/create-healify-task.js",
    "task:shift-report": "node data/tasks/healify-shift-reports/scripts/create-shift-report-task.js",
    "pdf:shift-cards": "node scripts/generate-shift-cards-pdf.js",
    "pdf:shift-report": "node scripts/generate-shift-report-pdf.js",
    "dev": "npm-run-all db:init --parallel sass:watch eleventy:serve",
    "start": "npm run db:init && concurrently --kill-others \"npm run sass:watch\" \"npx netlify dev\"",
    "build": "npm-run-all db:init sass:build eleventy:build",
    "clean": "rm -rf _site"
  },
  "keywords": [
    "ai",
    "orchestration",
    "productivity",
    "claude"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@anthropic-ai/sdk": "^0.71.2",
    "better-sqlite3": "^9.2.2",
    "dotenv": "^16.6.1",
    "firebase": "^12.7.0",
    "firebase-admin": "^13.6.0",
    "marked": "^15.0.12",
    "node-cron": "^4.2.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "netlify-cli": "^17.0.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.69.5"
  }
}
